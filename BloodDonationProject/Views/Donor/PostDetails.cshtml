        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav h1 {
                float: left;
                color: whitesmoke;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav h1:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav h1.active {
                    background-color: #4CAF50;
