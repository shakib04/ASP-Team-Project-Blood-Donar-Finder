@model IEnumerable<BloodDonationProject.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Post</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav h1 {
                float: left;
                color: whitesmoke;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav h1:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav h1.active {
                    background-color: #4CAF50;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="topnav">
        <h1>@Html.ActionLink("Home", "Index", "Donor")</h1>
        <h1>@Html.ActionLink("Edit", "Edit", "Donor")</h1>
        <h1 class="active">@Html.ActionLink("Post", "Post", "Donor")</h1>
        <h1>@Html.ActionLink("BloodRequest", "BloodRequest", "Donor")</h1>
        <h1>@Html.ActionLink("Users", "Users", "Donor")</h1>
        <h1>@Html.ActionLink("Report", "Report", "Donor")</h1>
        <h1>@Html.ActionLink("Report2", "Report2", "Donor")</h1>
        <h1>@Html.ActionLink("Logout", "Logout", "Admin")</h1>
    </div>
    <div>
        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="card">

                    <div class="card-body" style="border:1px solid black; padding:5px; margin: 5px;">
                        <h3 class="card-title">
                            Group:
                            <b> @Html.DisplayFor(modelItem => item.WantedBlood)</b>
                        </h3>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Text)</p>
                        <p class="card-text">Posted By: @item.userInfo.Name<p>
                            @Html.ActionLink("Details", "PostDetails", new { id = item.PostID }, new { @class = "btn btn-primary" })
                    </div>

                </div>
            </div>
         }
    </div>
</body>
</html>
